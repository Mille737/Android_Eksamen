<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".CustomListActivity">

    <ListView
        android:id="@+id/myListView2"
        android:layout_width="342dp"
        android:layout_height="371dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="35dp"
        android:background="#00FFDD00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/goToMap"
        android:layout_width="131dp"
        android:layout_height="85dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="79dp"
        android:clickable="true"
        android:onClick="goToMap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addNoteButton"
        app:layout_constraintTop_toBottomOf="@+id/myListView2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_mapmode"
        android:focusable="true" />

    <ImageView
        android:id="@+id/addNoteButton"
        android:layout_width="109dp"
        android:layout_height="89dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="79dp"
        android:clickable="true"
        android:onClick="addNote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/goToMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myListView2"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>